{
    "manifest_version": 3,
    "name": "ATSU",
    "description": "ATSU - Advanced Toolkit for StackOverflow Users",
    "version": "1.0",
    "author": [
        {
            "author1": {
                "name": "Walter Nu√±ez",
                "email": "icarosnet@gmail.com",
                "secction": "ATSU - Toolkit"
            },
            "author2": {
                "name": "Christian Velasquez",
                "email": "christianvelasces@gmail.com",
                "secction": "Base Kit Color & Features"
            },
            "author3": {
                "name": "Gonzalo Bianchi",
                "secction": "Programming Coach at SOes"
            },
            "author4": {
                "name": "SE Modetator Teams",
                "secction": "Project Support and Feasibility and Special Features"
            }
        }
    ],
    "icons": {
        "32": "src/media/32.png",
        "48": "src/media/48.png",
        "64": "src/media/64.png",
        "128": "src/media/128.png"
    },
    "permissions": [
        "scripting",
        "storage",
        "unlimitedStorage",
        "activeTab",
        "tabs",
        "history",
        "bookmarks",
        "cookies"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/html/guide.html",
                "src/html/modal_comment.html",
                "src/json/*.json",
                "src/json/lang/*.json",
                "src/sound/received_post.mp3",
                "src/sound/start.mp3"
            ],
            "matches": [
                "https://*.com/*"
            ]
        }
    ],



    "action": {
        "default_popup": "src/html/popup.html",
        "default_title": "ATSU - Advanced Toolkit for StackOverflow Users",
        "default_icon": {
            "32": "src/media/32.png",
            "48": "src/media/48.png",
            "64": "src/media/64.png",
            "128": "src/media/128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.com/*"
            ],
            "js": [
                "src/js/document.js"
            ]
        }
    ]
}
